<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="10dp"
    android:background="@android:drawable/editbox_dropdown_dark_frame"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewDateTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:text="2017.05.22 20:51"
            android:textColor="@color/textColor"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="2dp"
        android:weightSum="1">

        <TextView
            android:id="@+id/textViewDistance"
            android:layout_width="86dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="0.01 km"
            android:textColor="@color/textColor"
            android:textSize="20sp" />

        <ImageView
            android:layout_width="27dp"
            android:layout_height="28dp"
            android:layout_weight="0.13"
            app:srcCompat="@drawable/sandwatch" />

        <TextView
            android:id="@+id/textViewTravelTime"
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:text="01:25:59"
            android:textColor="@color/textColor"
            android:textSize="20sp" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="31dp"
            android:layout_weight="0.34"
            app:srcCompat="@drawable/calories_burned" />

        <TextView
            android:id="@+id/textViewCaloriesBurned"
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="-1"
            android:textColor="@color/textColor"
            android:textSize="20sp" />
    </LinearLayout>
</LinearLayout>